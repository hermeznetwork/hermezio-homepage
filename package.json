{
  "name": "hermez.io",
  "version": "1.0.0",
  "description": "Hermez Homepage",
  "author": "iden3",
  "scripts": {
    "build": "gatsby build",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "start": "gatsby develop -H 0.0.0.0",
    "serve": "gatsby serve",
    "clean": "gatsby clean"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "gatsby": "^2.24.87",
    "gatsby-plugin-jss": "^2.7.0",
    "gatsby-plugin-react-svg": "^3.0.0",
    "normalize.css": "^8.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-feather": "^2.0.8",
    "react-helmet": "^6.1.0",
    "react-jss": "^10.4.0"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.2.11",
    "standard": "^14.3.4"
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "browser"
    ],
    "ignore": [
      "/build/",
      "/public/"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{jsx,js}": "standard --fix"
  }
}
