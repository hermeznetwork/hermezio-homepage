{
  "name": "hermez.io",
  "version": "1.0.0",
  "description": "Hermez Homepage",
  "author": "iden3",
  "repository": {
    "type": "git",
    "url": "https://github.com/hermeznetwork/hermeznetwork.github.io"
  },
  "scripts": {
    "build": "gatsby build",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "start:dev": "gatsby develop -H 0.0.0.0",
    "start:prod": "npm run build && npm run serve",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "deploy": "gh-pages -d public"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "dotenv": "^8.2.0",
    "gatsby": "^2.24.87",
    "gatsby-plugin-jss": "^2.7.0",
    "gatsby-plugin-react-svg": "^3.0.0",
    "gatsby-source-ghost": "^4.2.3",
    "gh-pages": "^3.1.0",
    "normalize.css": "^8.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-feather": "^2.0.8",
    "react-helmet": "^6.1.0",
    "react-jss": "^10.4.0"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.2.11",
    "standard": "^14.3.4"
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "browser"
    ],
    "ignore": [
      "/build/",
      "/public/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{jsx,js}": "standard --fix"
  }
}
